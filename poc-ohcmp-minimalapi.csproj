<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <RootNamespace>poc_ohcmp_minimalapi</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Diagnostics.HealthChecks" Version="2.2.0" />
    <PackageReference Include="Swashbuckle.AspNetCore" Version="6.2.3" />
  </ItemGroup>

	<ItemGroup>
		<MyTextFile Include="version.txt"/>
	</ItemGroup>

	<Target Name="WriteVersion" AfterTargets="CopyFilesToOutputDirectory">
		<Message Text="Writing Version $(AssemblyVersion)" Importance="high" />
		<WriteLinesToFile
            File="$(OutputPath)version.txt"
            Lines="$(AssemblyVersion)"
            Overwrite="true"
            Encoding="Unicode"/>
	</Target>

</Project>
